<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp40"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp4"
            android:text="@string/profile_settings"
            android:textSize="@dimen/text_large" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp16">

            <ImageView
                android:id="@+id/iconChange"
                android:layout_width="@dimen/dp96"
                android:layout_height="@dimen/dp96"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/dp16"
                android:scaleType="centerInside" />

            <Button
                android:id="@+id/icon_change_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp40"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp4"
                android:height="@dimen/dp40"
                android:text="@string/button_change_avatar"
                android:textSize="@dimen/text_micro" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp16">

            <EditText
                android:id="@+id/passwordFieldNew"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp48"
                android:layout_marginLeft="@dimen/dp4"
                android:layout_marginRight="@dimen/dp4"
                android:gravity="center_vertical"
                android:hint="Новый пароль…"
                android:inputType="textPassword"
                android:textSize="@dimen/text_medium" />

        </TableRow>


        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp48"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp4"
            android:height="@dimen/dp40"
            android:text="@string/button_save"
            android:textSize="@dimen/text_medium" />
    </LinearLayout>
</ScrollView>
