<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp4"
        android:elevation="@dimen/dp4">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin">

            <ImageView
                android:layout_width="@dimen/dp96"
                android:layout_height="@dimen/dp96"
                android:id="@+id/photoIcon"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerInside"
                android:layout_marginRight="@dimen/dp16" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/photoIcon"
                android:autoText="false"
                android:text="Title"
                android:textAppearance="?android:textAppearanceLarge" />

            <TextView
                android:id="@+id/txtDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtTitle"
                android:layout_toRightOf="@+id/photoIcon"
                android:text="Description"
                android:textAppearance="?android:textAppearanceMedium"
                android:visibility="gone" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtAuthor"
                android:text="Author"
                android:layout_toRightOf="@+id/photoIcon"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_below="@id/txtDesc"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtCollection"
                android:text="Collection"
                android:layout_toRightOf="@+id/photoIcon"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_below="@id/txtAuthor"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtPrice"
                android:text="Price"
                android:layout_toRightOf="@+id/photoIcon"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_below="@id/txtCollection"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#8942;"
                android:id="@+id/txtOptionDigit"
                android:textAppearance="?android:textAppearanceLarge"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/activity_horizontal_margin"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Свернуть"
                android:clickable="true"
                android:id="@+id/txtHide"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_below="@id/txtPrice"
                android:gravity="center_horizontal"
                android:visibility="gone" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>