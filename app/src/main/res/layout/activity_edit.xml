<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp40"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp4"
            android:text="@string/ad_edit"
            android:textSize="@dimen/text_large" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">


            <EditText

                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="center_vertical"
                android:hint="@string/hint_name"
                android:inputType="text"
                android:textSize="@dimen/text_medium" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">


            <EditText

                android:id="@+id/edit_price"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="center_vertical"
                android:hint="@string/hint_price"
                android:inputType="number"
                android:textSize="@dimen/text_medium" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp48"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/dp4"
                android:text="@string/new_collection"
                android:textSize="@dimen/text_medium" />

            <Spinner
                android:id="@+id/edit_collection"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp48"
                android:layout_marginLeft="@dimen/dp4"
                android:entries="@+array/collections"
                android:gravity="center_vertical"
                android:spinnerMode="dialog"
                android:textSize="@dimen/text_medium" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/photoSelect"
                android:layout_width="@dimen/dp96"
                android:layout_height="@dimen/dp96"
                android:layout_marginRight="@dimen/dp16"
                android:scaleType="centerInside" />

            <Button
                android:id="@+id/photo_select_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp40"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp4"
                android:height="@dimen/dp40"
                android:text="@string/button_select_image"
                android:textSize="@dimen/text_micro" />
        </TableRow>

        <Button
            android:id="@+id/editSaveButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp48"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp4"
            android:height="@dimen/dp40"
            android:text="@string/button_save"
            android:textSize="@dimen/text_medium" />
    </LinearLayout>
</ScrollView>