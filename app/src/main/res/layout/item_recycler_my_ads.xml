<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp4"
        android:elevation="@dimen/dp4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp8">

            <ImageView
                android:id="@+id/photoIcon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp8"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/photoIcon"
                android:text=""
                android:textAppearance="?android:textAppearanceLarge" />

            <TextView
                android:id="@+id/txtCollection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtTitle"
                android:layout_toRightOf="@id/photoIcon"
                android:text=""
                android:textAlignment="textEnd"
                android:textAppearance="?android:textAppearanceMedium" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtCollection"
                android:layout_toRightOf="@id/photoIcon"
                android:text=""
                android:textAlignment="textEnd"
                android:textAppearance="?android:textAppearanceMedium" />

            <TextView
                android:id="@+id/txtCreated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtPrice"
                android:layout_toRightOf="@id/photoIcon"
                android:text=""
                android:textAlignment="textEnd"
                android:textAppearance="?android:textAppearanceMedium" />

            <TextView
                android:id="@+id/txtOptionDigit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="&#8942;"
                android:textAppearance="?android:textAppearanceLarge" />

            <TextView
                android:id="@+id/txtDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtCreated"
                android:text="Description"
                android:textAlignment="textEnd"
                android:textAppearance="?android:textAppearanceMedium"
                android:visibility="gone" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>